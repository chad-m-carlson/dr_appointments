<h1><%= @doctor.full_name %> | Appointments</h1>
<div class="col-sm">
    <h3>Your Appointment List</h3>
    <ul>
      <% @doctor.appointments.each do |a| %>
      <li>
          <%= a.patient.full_name %> | <%= a.visit_type %> | <%= a.date %> 
          <br />
          <h6>
            <%= button_to  "Delete Appointment", doctor_appointment_path(@doctor, a), method: :delete %>
          </h6>
        </li>
        <% end%>
    </ul>
  </div>
  <%= link_to "New Appointment", new_doctor_appointment_path(@doctor) %>
