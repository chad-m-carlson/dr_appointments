<h1>Create A New Appointment</h1>
<div class="form group">
  <%= form_with(model: [@doctor, @appointment], local: true) do |f| %>
    <%= f.label :date %>
    <%= f.date_field :date %>
</div>
<div class="form group">
  <%= f.label :visit_type %>
  <%= f.select :visit_type, ["check up", "pregnancy", "sore throat", "tummy ache"] %>
</div>
<div class="form group">
  <%= f.label :patient_id%>
  <%= f.select :patient_id, @patients.collect { |u| [u.full_name, u.id] } %>
</div>
<%= f.submit nil, class: "btn btn-primary" %>
<% end %>
